/**index.wxss**/
@import "../../weui.wxss";

.page-section{
  margin-bottom: 20rpx;
}
.fontLoad{text-align: center;font-size: 14px; color: #c4a14a;}
.flex-wrp {display: flex;}
.flex-item{text-align: center;width: 20%;height: 30px;line-height: 30px; font-size: 14px;color: #666;padding: 5px}
.hoverTitle{color: #c4a14a;}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.weui-navbar__slider {width:50%;background-color: #c4a14a}
.weui-media-box__hd{height: 80px;line-height: 80px;}
.weui-media-box__score {
  font-weight: 400;
  font-size: 15px;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}